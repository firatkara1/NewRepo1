@model EczaDepoUygulama.Models.Entity.markalartbl
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Marka Ekle</h2>

<div class="container">
    @using (Html.BeginForm("Ekle", "Markalar", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.kategorilertbl.kategori)
            @Html.DropDownListFor(x=>x.kategori_id, (List<SelectListItem>)ViewBag.l, "Seçiniz", new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.kategori_id, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.marka)
            @Html.TextBoxFor(x => x.marka, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.marka, "", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.aciklama)
            @Html.TextBoxFor(x => x.aciklama, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.aciklama, "", new { @class = "text-danger" })

        </div>

        <div>
            <button class="btn btn-success">
                Marka Ekle
            </button>
        </div>
    }
</div>


@section scriptdanger{

    <script src="~/Scripts/ondalik.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}