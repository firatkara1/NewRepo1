@model EczaDepoUygulama.Models.Entity.kategorilertbl
@{
    ViewBag.Title = "GuncelleBilgiGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategori Güncelle</h2>

<div class="container">
    <form action="/Kategoriler/Guncelle/">
        @*
        <div class="form-group">
            <b>
                Id
            </b>
            @Html.TextBoxFor(x => x.kategori_id, new { @class = "form-control" })
        </div>*@

        @Html.HiddenFor(x => x.kategori_id)
        <div class="form-group">
            <b>
                Kategori
            </b>
            @Html.TextBoxFor(x => x.kategori, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.kategori, "", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            <b>
                Açıklama
            </b>
            @Html.TextAreaFor(x => x.aciklama, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.aciklama, "", new { @class = "text-danger" })

        </div>

        <div>
            <button class="btn btn-primary">Kategori Güncelle</button>
        </div>

    </form>
</div>

@section scriptdanger{


    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}